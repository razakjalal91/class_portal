<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/profileText" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileText"
        android:layout_toLeftOf="@+id/profileText"
        android:layout_toStartOf="@+id/profileText"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="22dp"
        android:id="@+id/emailText" />

    <TextView
        android:text="UserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/emailText"
        android:layout_toRightOf="@+id/emailText"
        android:layout_toEndOf="@+id/emailText"
        android:id="@+id/userEmail" />

    <TextView
        android:text="Role: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignStart="@+id/emailText"
        android:layout_marginTop="20dp"
        android:id="@+id/roleText" />

    <TextView
        android:text="userrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/roleText"
        android:layout_toRightOf="@+id/emailText"
        android:layout_toEndOf="@+id/emailText"
        android:id="@+id/userRole" />

</RelativeLayout>